<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/background"
        android:minHeight="100dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:layout_marginLeft="10.0dp"
            android:layout_marginTop="10.0dp"
            android:layout_marginBottom="105.0dp"  
            android:background="@drawable/music1"
            android:gravity="center"   
            android:textSize="15dp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginBottom="105.0dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@drawable/music2"
            android:gravity="center"
            android:textSize="15dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="95.0dp"
            android:layout_marginLeft="10.0dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/music3"
            android:gravity="center"
            android:minHeight="50dp"
            android:layout_weight="3"
             />
        <TextView
            android:layout_width="100.0dp"
            android:gravity="center"
            android:layout_height="95.0dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/music4"
            android:layout_weight="1"
            android:minHeight="50dp"
             />
    </LinearLayout>

</RelativeLayout>