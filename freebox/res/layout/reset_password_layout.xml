<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <EditText
            android:id="@+id/phonenumber_edit"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/login_editbox"
            android:hint="请输入手机号"
            android:singleLine="true"
            android:textColor="#000"
            android:textSize="15sp" />

        <Button
            android:id="@+id/reset_btn"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/phonenumber_edit"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_style_green"
            android:onClick="login_mainpage"
            android:text="密码找回"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/passwd_origin_edit"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/reset_btn"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/login_editbox"
            android:hint="请输入原密码"
            android:password="true"
            android:singleLine="true"
            android:textColor="#000"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/passwd_new_edit"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/passwd_origin_edit"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/login_editbox"
            android:hint="请输入新密码"
            android:password="true"
            android:singleLine="true"
            android:textColor="#000"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/passwd_new_repeat_edit"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/passwd_new_edit"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/login_editbox"
            android:hint="请确认新密码"
            android:password="true"
            android:singleLine="true"
            android:textColor="#000"
            android:textSize="15sp" />

        <Button
            android:id="@+id/change_btn"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/passwd_new_repeat_edit"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_style_green"
            android:onClick="login_mainpage"
            android:text="密码修改"
            android:textColor="#ffffff"
            android:textSize="18sp" />
    </RelativeLayout>

</LinearLayout>