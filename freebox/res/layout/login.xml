    <EditText
        android:id="@+id/login_user_edit"
        android:layout_width="160dp"
        android:layout_height="30dp"
        android:layout_below="@+id/login_top_layout"

        android:layout_marginTop="190.0dp"
        android:layout_marginLeft="90.0dp"
        android:background="@drawable/login_editbox"
        android:hint="用户名"
        android:singleLine="true"
        android:textColor="#000"
        android:textSize="15.0sp" />

    <EditText
        android:id="@+id/login_passwd_edit"
        android:layout_width="160dp"
        android:layout_height="30dp"
        android:layout_below="@+id/login_user_edit"
        android:layout_marginLeft="90dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15.0dp"
        android:background="@drawable/login_editbox"
        android:hint="密码"
        android:password="true"
        android:singleLine="true"
        android:textColor="#000"
        android:textSize="15.0sp" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_passwd_edit"
        android:layout_marginTop="10dp" >

        <Button
            android:id="@+id/forget_passwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
			 android:layout_marginTop="10dp"
            android:layout_marginLeft="190dp"
            android:background="#0000"
            android:onClick="reset_password"
            android:text="忘记密码?"
            android:textColor="#00f"
            android:textSize="10sp" />

        <Button
            android:id="@+id/login_login_btn"
            android:layout_width="70dp"
            android:layout_height="25dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="90dp"

            android:background="@drawable/btn_style_green"
            android:onClick="login_mainpage"
            android:text="登录"
            android:textColor="#ffffff"
            android:textSize="10sp" />
    </RelativeLayout>

